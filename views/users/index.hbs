                    <label for="form1acd" class="color-highlight font-11 font-500">Broker Name</label>
                    <i class="fa fa-times disabled invalid color-red-dark"></i>
                    <i class="fa fa-check disabled valid color-green-dark"></i>
                    <em>(required)</em>
                </div>
                <div class="input-style has-borders no-icon mb-4">
                    <label for="form5" class="color-highlight">Add User</label>
                    <select id="form5" name="nuser">
                        <option value="default" disabled selected> <i class="fa fa-user"></i>
                            Select a user</option>
                        {{#each users}}
                        <option value="{{this.Name}}">{{this.Name}}</option>
                        {{/each}}
                    </select>
                    <span><i class="fa fa-chevron-down"></i></span>
                    <i class="fa fa-check disabled valid color-green-dark"></i>
                    <i class="fa fa-check disabled invalid color-red-dark"></i>
                    <em></em>
                </div>
                <div class="input-style has-borders has-icon validate-field mb-4">
                    <i class="fa fa-pen"></i>
                    <input type="name" name="note" class="form-control validate-name" id="form1acd" placeholder="Note">
                    <label for="form1acd" class="color-highlight font-11 font-500">Note</label>
                    <i class="fa fa-times disabled invalid color-red-dark"></i>
                    <i class="fa fa-check disabled valid color-green-dark"></i>
                    <em>(required)</em>
                </div>

                <div class="input-style has-borders has-icon validate-field mb-4">
                    <input type="file" name="Image" class="form-control validate-name" <em>(required)</em>
                </div>



                <p class="text-center pb-0 mb-n1 pt-1">
                    <a href="#" data-menu="menu-signin" class="text-center font-11 color-gray2-dark">Read
                        instructions</a>
                </p>
                <button type="submit"
                    class="btn btn-full btn-m shadow-l mb-3 w-100 rounded-s font-600 bg-blue-dark mt-4">+
                    Create</button>
            </form>
        </div>
