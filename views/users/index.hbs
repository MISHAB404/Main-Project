                    <i class="fa fa-times disabled invalid color-red-dark"></i>
                    <i class="fa fa-check disabled valid color-green-dark"></i>
                    <em>(optional)</em>
                </div>

                <div class="input-style has-borders  validate-field mb-4">
                    <input type="file" name="Image" class="form-control validate-name" required> <em>(required)</em>
                </div>



                <p class="text-center pb-0 mb-n1 pt-1">
                    <a href="#" data-menu="menu-Instruction" class="text-center font-11 color-gray2-dark">Read
                        instructions</a>
                </p>
                <button type="submit"
                    class="btn btn-full btn-m shadow-l mb-3 w-100 rounded-s font-600 bg-blue-dark mt-4">+
                    Create</button>
            </form>
        </div>
